<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

		<variable
			name="viewModel"
			type="cz.koto.kotiheating.ui.MainViewModel" />

		<variable
			name="view"
			type="cz.koto.kotiheating.ui.MainView" />
	</data>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<include
			android:id="@+id/include" layout="@layout/toolbar" />

		<android.support.design.widget.CoordinatorLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<android.support.design.widget.AppBarLayout
				android:id="@+id/collapsing_appbar_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<android.support.design.widget.CollapsingToolbarLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:contentScrim="?attr/colorPrimary"
					app:titleEnabled="false"
					app:layout_scrollFlags="scroll|enterAlways"
					app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title">

					<cz.koto.kotiheating.ui.status.HeatingStatusLayout
						android:id="@+id/circleProgress"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_margin="8dp"
						android:onClick="@{()-> view.reloadStatus()}"
						app:statusDeviceItemList="@{viewModel.statusDeviceList}"
						app:statusRequestLocalItemList="@{viewModel.statusRequestLocalList}"
						app:currentDay="@{viewModel.selectedDay}" />

				</android.support.design.widget.CollapsingToolbarLayout>
			</android.support.design.widget.AppBarLayout>

			<android.support.v7.widget.RecyclerView
				android:id="@+id/dailyScheduleRecycler"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp"
				android:padding="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_96"
				android:clipToPadding="false"
				app:layoutManager="@{LayoutManagers.linear()}"
				app:liveDataItemBinding="@{viewModel.itemBinding}"
				app:liveDataItems="@{viewModel.statusRequestLocalList}"
				app:liveDataAdapter="@{view.lifecycleAwareAdapter}"
				tools:listitem="@layout/item_heating"
				app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
		</android.support.design.widget.CoordinatorLayout>

	</LinearLayout>
</layout>

