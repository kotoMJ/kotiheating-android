<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="viewModel"
			type="cz.koto.kotiheating.MainViewModel" />

		<variable
			name="view"
			type="cz.koto.kotiheating.MainView" />
	</data>
	<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="cz.koto.kotiheating">

		<include
			android:id="@+id/include" layout="@layout/toolbar" />


		<cz.koto.kotiheating.ui.status.HeatingStatusLayout
			android:id="@+id/circleProgress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:onClick="@{()-> view.reloadStatus()}"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/include"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />


	</android.support.constraint.ConstraintLayout>
</layout>

