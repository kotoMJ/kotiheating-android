<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="item"
			type="cz.koto.kotiheating.ui.status.StatusItem" />

		<variable
			name="viewModel"
			type="cz.koto.kotiheating.MainViewModel" />

		<variable
			name="view"
			type="cz.koto.kotiheating.MainView" />


	</data>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/global_spacing_8"
		android:foreground="?attr/selectableItemBackground">

		<LinearLayout
			android:id="@+id/item_foreground"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="@dimen/global_spacing_16">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/global_spacing_4"
				android:textAppearance="@style/TextAppearance.AppCompat.Display1"
				android:textStyle="bold"
				android:text="10:00"
				android:textColor="@color/primaryColor"
				tools:text="16:00" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Display1"
				android:text="13°C"
				tools:text="18°C" />

		</LinearLayout>

	</android.support.v7.widget.CardView>

</layout>

